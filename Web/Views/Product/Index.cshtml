@model Web.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Produkter";
}
<br />
<div>
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <p>Du måste vara inloggad för att kunna beställa en prenumeration.</p>
        </div>
    }

    @if (Model.Products.Count() > 0)
    {
        <div class="col">
            @foreach (var product in Model.Products)
            {
                <div class="col justify-content-around m-2">
                    <partial name="_Product" model="product" />
                </div>
            }
        </div>
    }
    else
    {
        <div class="col">
            <h4 class="text-uppercase">Finns inga tidningar att visa</h4>
        </div>
    }
</div>